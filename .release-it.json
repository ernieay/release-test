{
  "git": {
    "tag": "true",
    "push": "true",
    "commit": "true"
  },
  "github": {
    "release": "true",
    "releaseName": "Release v${version}",
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": "false"
  },
  "hooks": {
    "after:release": [
      "echo 'Release v${version} ready'",
      "echo \"tag v${version}\"",
      "echo https://${repo.host}/siteminder-au/${name}/releases/tag/${version}",
      "echo buildkite tag build v${version}",
      "echo https://buildkite.com/siteminder/${name}/builds?branch=v${version}"
    ]
  }
}
