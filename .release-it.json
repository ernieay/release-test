{
  "git": {
    "tag": "true",
    "push": "true",
    "commit": "true"
  },
  "github": {
    "release": "true",
    "releaseName": "Release v${version}",
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:release": [
      "echo Release v${version} ready",
      "echo Buildkite: https://buildkite.com/siteminder/${name}/builds?branch=v${version}",
      "echo ${version} ${latestVersion}"
    ]
  }
}
