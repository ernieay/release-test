{
  "git": {
    "tag": "true",
    "push": "true",
    "commit": "true"
  },
  "github": {
    "release": "true",
    "releaseName": "Release v${version}",
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": "false"
  },
  "hooks": {
    "after:release": "echo ${name} ${repo.remote} ${repo.host} ${repo.project}"
  }
}
